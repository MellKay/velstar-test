<div class="collection-product-grid wrap">
    <h3 class="collection-product-grid__title">{{ section.settings.collection.title }}</h3>
    <div class="collection-product-grid__products">
        {% for product in section.settings.collection.products limit: 8 %}
            {% render 'product-card', product: product %}
        {% endfor %}
    </div>
    <a href="{{ section.settings.collection.url }}" class="see-more">{{ section.settings.text}} <img src="assets/arrow-right-dark.svg" alt="Arrow Right" width="18" height="18" /></a>
</div>


{% schema %}
{
    "name": "Collection Grid",
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Link Text",
            "default": "See Everything"
        }
    ],
    "presets": [
        {
            "name": "Collection Grid"
        }
    ]
}
{% endschema %}